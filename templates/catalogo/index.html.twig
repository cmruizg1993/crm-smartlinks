{% extends 'base.html.twig' %}

{% block title %}Catalogo index{% endblock %}

{% block body %}
    <h1>Catalogo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Codigo</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for catalogo in catalogos %}
            <tr>
                <td>{{ catalogo.id }}</td>
                <td>{{ catalogo.nombre }}</td>
                <td>{{ catalogo.codigo }}</td>
                <td>{{ catalogo.descripcion }}</td>
                <td>
                    <a href="{{ path('catalogo_show', {'id': catalogo.id}) }}">show</a>
                    <a href="{{ path('catalogo_edit', {'id': catalogo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('catalogo_new') }}">Create new</a>
{% endblock %}
