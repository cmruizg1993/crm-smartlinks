{% extends 'base.html.twig' %}

{% block title %}SAN index{% endblock %}

{% block body %}
    <h1>SAN index</h1>

    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>Direccion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for s_a_n in s_a_ns %}
            <tr>
                <td>{{ s_a_n.id }}</td>
                <td>{{ s_a_n.numero }}</td>
                <td>{{ s_a_n.fecha ? s_a_n.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ s_a_n.cliente.nombres }}</td>
                <td>{{ s_a_n.cliente.direccion }}</td>
                <td>
                    <a href="{{ path('s_a_n_show', {'id': s_a_n.id}) }}">show</a>
                    <a href="{{ path('s_a_n_edit', {'id': s_a_n.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('s_a_n_new') }}">Create new</a>
{% endblock %}
