{% extends 'base_auth.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h4>Cambiar tu contraseña</h4>
    <div class="container-fluid">
        {{ form_start(requestForm) }}
        <div class="form-group row justify-content-end">
            <label for="" class="col-form-label col-3">
                <span class="float-right">Email</span>
            </label>
            <div class="col-9">
                {{ form_widget(requestForm.email,{attr:{'class':'form-control', 'placeholder': 'crm@makrocel.com'}}) }}
            </div>
        </div>

        <div>
            <small>
                Ingresa tu email para enviarte link de cambió de contraseña
            </small>
        </div>
        <div class="form-group row justify-content-end">
            <div class="col-9">
                <button class="btn btn-primary">Enviar Email</button>
            </div>
        </div>

        {{ form_end(requestForm) }}
    </div>

{% endblock %}