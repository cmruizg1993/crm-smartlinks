{% extends 'base.html.twig' %}

{% block title %}Empresa index{% endblock %}

{% block body %}
    <h1>Empresa index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Obligado</th>
                <th>RazonSocial</th>
                <th>NombreComercial</th>
                <th>Ruc</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Direccion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for empresa in empresas %}
            <tr>
                <td>{{ empresa.id }}</td>
                <td>{{ empresa.obligadoContabilidad }}</td>
                <td>{{ empresa.razonSocial }}</td>
                <td>{{ empresa.nombreComercial }}</td>
                <td>{{ empresa.ruc }}</td>
                <td>{{ empresa.email }}</td>
                <td>{{ empresa.telefono }}</td>
                <td>{{ empresa.direccion }}</td>
                <td>
                    <a href="{{ path('app_empresa_show', {'id': empresa.id}) }}">show</a>
                    <a href="{{ path('app_empresa_edit', {'id': empresa.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_empresa_new') }}">Create new</a>
{% endblock %}
