{% extends 'base.html.twig' %}

{% block title %}Establecimiento index{% endblock %}

{% block body %}
    <h1>Establecimiento index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for establecimiento in establecimientos %}
            <tr>
                <td>{{ establecimiento.id }}</td>
                <td>{{ establecimiento.codigo }}</td>
                <td>{{ establecimiento.nombre }}</td>
                <td>{{ establecimiento.direccion }}</td>
                <td>
                    <a href="{{ path('establecimiento_show', {'id': establecimiento.id}) }}">show</a>
