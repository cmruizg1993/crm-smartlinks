{% extends 'base.html.twig' %}

{% block title %}New SAN{% endblock %}

{% block body %}
    <h1>Aprobar Solicitud</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            {{ form_start(form) }}
            <div class="form-group row justify-content-end">
                <label for="" class="col-form-label col-4">
                    <span class="float-right">Número de SAN</span>
                </label>
                <div class="col-8">
                    {{ form_widget(form.numero,{ 'attr': {'class':'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row justify-content-end">
                <label for="" class="col-form-label col-4">
                    <span class="float-right">Valor Susccripción</span>
                </label>
                <div class="col-8">
                    {{ form_widget(form.valorSuscripcion,{ 'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <label for="" class="col-form-label col-4">
                    <span class="float-right">Captura SAN</span>
                </label>
                <div class="col-8">
                    {{ form_widget(form.capturaSan,{ 'attr': {'class':'form-control', 'accept':'.pdf,.jpg,.png,.jpeg'}}) }}
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <div class="col-4">
                    <button class="btn btn-info btn-block">{{ button_label|default('Guardar') }}</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>


    <a class="btn btn-lg btn-warning mt-3" href="{{ path('solicitud_index') }}">Regresar</a>
{% endblock %}
