<script>
    let equipos = [];
    $("#parametroEquipo").keyup(function (){
        var param = $(this).val();
        var L = param.length;
        if ( L >= 3){
            $.ajax({
                url:'{{ path('buscar_equipo') }}',
                type:'POST',
                contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                data: { param: param },
                success: function (html){
                    $("#tEquipos").html(html);
                    $(".btn-add").click(agregarEquipo)
                }

            })
        }
    });
