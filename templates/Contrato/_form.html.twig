<div class="row mb-3">

    <div class="col-md-4">
        <div class="form-group row justify-content-end">
            <label for="" class="col-form-label col-4">
                <span class="float-right">Número</span>
            </label>
            <div class="col-8">
                {{ form_widget(form.numero,{ 'attr': {'class':'form-control', 'style':'color: red; font-weight: 700; font-size: 2rem !important; line-height: 3rem; height: 3rem !important', 'onkeydown':  'if(event.keyCode==8 || event.keyCode == 46) return true; return /[0-9]/i.test(event.key)'}}) }}
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group row">
            <label class="col-4 col-form-label">Fecha</label>
            <div class="col-8">
                <div id="datepicker-popup" class="input-group date datepicker navbar-date-picker">
                    <span class="input-group-addon input-group-prepend border-right">
                        <span class="icon-calendar input-group-text calendar-icon"></span>
                    </span>
                    {{ form_widget(form.fecha, {'attr': {}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group row">
            <div class="col d-flex justify-content-end">
                <button type="submit" id="btn-send" class="btn btn-success">
                    <i class="icon-file-add"></i>
                    <span class="m-1">{{ button_label|default('Guardar') }}</span>
                </button>
            </div>
        </div>
    </div>
</div>
<div id="accordion">
    <div class="card">
        <div class="card-header bg-primary" id="headingOne">
            <h5 class="mb-0">
