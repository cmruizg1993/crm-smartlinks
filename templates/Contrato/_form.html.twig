                    <div class="col-md-4">
                        {{ include('modals/buscarEquipo.html.twig', {'table_id': 'tEquiposInstalacion'}) }}
                    </div>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th colspan="3">
                                Nombre
                            </th>
                            <th colspan="2">
                                Codigo
                            </th>
                            <th colspan="2">
                                Serie
                            </th>
                            <th colspan="1">
                                Cantidad
                            </th>
                            <th colspan="1">

                            </th>
                        </tr>
                        </thead>
                        <tbody id="tEquiposInstalacion">
                        {% for e in contrato.equipos%}
                            <tr>
                                <td colspan="3">{{e.equipo.nombre}}</td>
                                <td colspan="2">{{e.equipo.codigo}}</td>
                                <td colspan="2"><input type="text"  class="form-control form-group-sm" onchange="establecerSerial(this, {{e.equipo.id}})" {% if not e.equipo.esSeriado %}disabled{% else %} value="{{ e.serie }}"{% endif%} required></td>
                                <td colspan="1"><input type="number" min="1" value="{{ e.cantidad }}" class="form-control form-group-sm" onchange="establecerCantidad(this, {{e.equipo.id}})"/></td>
                                <td colspan="1"><button type="button" class="btn btn-sm btn-danger btn-eliminar" data-id={{e.equipo.id}} >Quitar</button></td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                    {{ form_widget(form.equiposjson)}}
                    {{ form_widget(form)}}
                </div>
            </div>
        </div>
    </div>
