{% extends 'base.html.twig' %}

{% block title %}SAN index{% endblock %}

{% block body %}
    <h1>Contratos</h1>

    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>Direccion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contrato in contratos %}
            <tr>
                <td>{{ contrato.id }}</td>
                <td>{{ contrato.numero }}</td>
                <td>{{ contrato.fecha ? contrato.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ contrato.cliente.nombres }}</td>
                <td>{{ contrato.cliente.direccion }}</td>
                <td>
                    <a href="{{ path('contrato_show', {'id': contrato.id}) }}">show</a>
                    <a href="{{ path('contrato_edit', {'id': contrato.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contrato_new') }}">Create new</a>
{% endblock %}
