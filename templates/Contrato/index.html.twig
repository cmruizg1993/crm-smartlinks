    <div class="row">
        <div class="col">
            <h3 class="m-2">Contratos</h3>
        </div>
        <div class="col d-flex justify-content-end">
            <a class="btn btn-sm btn-success" href="{{ path('contrato_activacion') }}">
                Generar Activación
            </a>
            <a class="btn btn-sm btn-warning" href="{{ path('contrato_corte') }}">
                Generar Corte
            </a>
            <a class="btn btn-sm btn-danger" href="{{ path('contrato_suspension') }}">
