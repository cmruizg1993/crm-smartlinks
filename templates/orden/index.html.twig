{% extends 'base.html.twig' %}

{% block title %}Órdenes{% endblock %}

{% block body %}

    <div class="container">

        {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
        {{ form_start(form) }}
        <div class="row mb-3">
            <div class="col-2">
                <h3>Órdenes</h3>
            </div>
            <div class="col">
                {{ form_row(form.desde) }}
            </div>
            <div class="col">
                {{ form_row(form.hasta) }}
            </div>
            <div class="col">
                <button class="btn btn-success btn-sm">Buscar</button>
            </div>
        </div>


        {{ form_end(form) }}
    </div>
    <ordenes listado="{{ ordenes|json_encode }}"
              urledicion="{{ path('orden_edit',{id: 0}) }}"
              urlmostrar="{{ path('orden_show', {id: 0}) }}"
    ></ordenes>
{% endblock %}
{% block javascript %}

{{ encore_entry_script_tags('app') }}
{% endblock %}

